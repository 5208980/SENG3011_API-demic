    "schemes": [
        "http"
    ],

    "paths": {
        "/articles": {
            "get": {
                "tags": [
                    "articles"
                ],
                "summary": "Find articles according to query parameters",
                "description": "Returns a json response with an array of articles according to query parameters",
                "operationId": "",
                "consumes": [
                    "application/json",
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "start_date",
                        "in": "query",
                        "description": "Start date for query [Support xx as placeholders]. (2020-01-01T12:00:00)",
                        "required": true,
                        "type": "string",
                        "format": "YY-MM-DDTHH:MM:SS",
                    },
                    {
                        "name": "end_date",
                        "in": "query",
                        "description": "End date for query [Support xx as placeholders]. (2020-02-01T12:00:00)",
                        "required": true,
                        "type": "string",
                        "format": "YY-MM-DDTHH:MM:SS",
                    },
                    {
                        "name": "location",
                        "in": "query",
                        "description": "Location that artiles will focus on. (Australia)",
                        "required": false,
                        "type": "string",
                    },
                    {
                        "name": "key_term",
                        "in": "query",
                        "description": "Key Terms to search on. [Supports multi-terms]. (coronavirus, pandemic)",
                        "required": false,
                        "type": "string",
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Number of articles to return [Max 1000]. (10)",
                        "required": false,
                        "type": "int",
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful Operation",
                        "examples": {
                            "application/json":
                            {
                                "articles": [
                                    {
                                        "url": "string",
                                        "date_of_publication": "string",
                                        "header": "string",
                                        "main_text": "string",
                                        "reports": [
                                            {
                                                "event_date": "string",
                                                "locations": [
                                                    {
                                                        "country": "string",
                                                        "location": "string"
                                                    }
                                                ],
                                                "diseases": [ "string" ],
                                                "syndromes": [ "string" ]
                                            }
                                        ]
                                    }
                                ]
                            }

                        }
                    },
                    "400": {
                        "description": "Invalid Date Input",
                        "examples": {
                            "application/json":
                            {
                                "status": 400,
                                "message": "Invalid Query Parameters (Date)"
                            }
                        }
                    },
                    "404": {
                        "description": "No Results from API call",
                        "examples": {
                            "application/json":
                            {
                                "status": 404,
                                "message": "No result for query"
                            }
                        }
                    }
                }
            },
        }
    },

    "definitions": {
        "Article": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string",
                    "format": ""
                },
                "date_of_publication": {
                    "type": "string",
                    "format": ""
                },
                "header": {
                    "type": "string",
                    "format": ""
                },
                "main_text": {
                    "type": "string",
                    "format": ""
                },
                "reports": {
                    "type": "array",
                    "description": "Reports"
                }
            },
        },
        "Reports": {
            "type": "object",
            "properties": {
                "event_date": {
                    "type": "string",
                    "format": ""
                },
                "location": {
                    "type": "array",
                    "items": { "type": "string" }
                },
                "disease": {
                    "type": "array",
                    "items": { "type": "string" }
                },
                "syndromes": {
                    "type": "string",
                    "format": ""
                }
            }
        },
        "Locations": {
            "type": "object",
            "properties": {
                "country": {
                    "type": "string",
